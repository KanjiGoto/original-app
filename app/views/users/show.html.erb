<div class="contents">
    <nav>left</nav>
    <main>
        <div class="main-box">
        <h3><%= @nickname %>の目標</h3>
        <% @goals.each do |goal| %>
          <div class="individual-goal">
              
            <p class="important"><%= goal.goal %></p>
            <p><%= goal.reason %></p>
            <p><%= goal.future %></p>
            
            <%= link_to "削除", "/goals/#{goal.id}", method: :delete %>
            <%= link_to "編集", "/goals/#{goal.id}/edit" %>
            <%= link_to "詳細", "/goals/#{goal.id}" %>
          </div>
        <% end %>
        
          <a href="/goals/new" class="post-button">目標を投稿する</a>
       
        
        </div>
    </main>
    <aside>right</aside>
</div>